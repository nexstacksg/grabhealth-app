# Node Environment
NODE_ENV=production

# Server
PORT=4000

# Database (Use PostgreSQL connection string for production)
DATABASE_URL="postgresql://user:password@host:5432/grabhealth_prod?schema=public"

# JWT (Generate secure keys with: openssl rand -base64 32)
JWT_SECRET=your-production-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-production-refresh-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Production SMTP configuration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
EMAIL_FROM=noreply@grabhealth.com

# CORS (Production frontend URLs)
CORS_ORIGIN=https://grabhealth.com,https://admin.grabhealth.com

# Frontend URLs
FRONTEND_URL=https://grabhealth.com
ADMIN_URL=https://admin.grabhealth.com

# File Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# Bcrypt
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (Production Redis instance)
REDIS_URL=redis://your-redis-host:6379
REDIS_TTL=3600

# Payment Gateway
STRIPE_SECRET_KEY=sk_live_your_production_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_production_spaces_access_key
DO_SPACES_SECRET=your_production_spaces_secret_key
DO_SPACES_ENDPOINT=sgp1.digitaloceanspaces.com
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=grab
DO_SPACES_CDN_ENDPOINT=https://grab.sgp1.digitaloceanspaces.com