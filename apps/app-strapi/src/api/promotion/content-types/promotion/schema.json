{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion",
    "description": "Promotional discounts and offers"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "discountType": {
      "type": "enumeration",
      "enum": ["PERCENTAGE", "FIXED_AMOUNT"],
      "required": true
    },
    "discountValue": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "minPurchase": {
      "type": "decimal",
      "min": 0
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}