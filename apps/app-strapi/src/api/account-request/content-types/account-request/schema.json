{
  "kind": "collectionType",
  "collectionName": "account_requests",
  "info": {
    "singularName": "account-request",
    "pluralName": "account-requests",
    "displayName": "Account Request",
    "description": "User account change requests"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "requestType": {
      "type": "string",
      "required": true
    },
    "requestDetails": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["PENDING", "APPROVED", "REJECTED"],
      "default": "PENDING"
    },
    "adminNotes": {
      "type": "text"
    },
    "processedAt": {
      "type": "datetime"
    },
    "processedBy": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}