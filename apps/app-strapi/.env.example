
# Server
HOST=0.0.0.0
PORT=1337

# Secrets
# Generate secure keys using: openssl rand -base64 32
APP_KEYS=your-app-key-1,your-app-key-2,your-app-key-3,your-app-key-4
API_TOKEN_SALT=your-api-token-salt-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Database
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DATABASE_CLIENT=postgres
DATABASE_HOST=your-database-host-here
DATABASE_PORT=5432
DATABASE_NAME=your-database-name-here
DATABASE_USERNAME=your-database-username-here
DATABASE_PASSWORD=your-database-password-here
DATABASE_SSL=true
DATABASE_FILENAME=

# DigitalOcean Spaces Configuration
DO_SPACE_ENDPOINT=https://your-region.digitaloceanspaces.com
DO_SPACE_ACCESS_KEY=your-access-key-here
DO_SPACE_SECRET_KEY=your-secret-key-here
DO_SPACE_REGION=your-region-here
DO_SPACE_BUCKET=your-bucket-name-here
DO_SPACE_CDN=
DO_ACL=public-read
DO_SIGNED_URL_EXPIRES=600

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
SEND_FROM=noreply@yourdomain.com
SEND_TO=admin@yourdomain.com

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development
